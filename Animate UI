  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
  <script>
    gsap.from("nav", {y:-80, duration:1, ease:"power3.out"});

    gsap.from(".hero h2", {opacity:0, y:50, duration:1, delay:0.5});
    gsap.from(".hero p", {opacity:0, y:50, duration:1, delay:1});
    gsap.from(".hero button", {
      opacity:0, scale:0.5, duration:1, delay:1.5,
      onComplete: () => {
        gsap.to(".hero button", {scale:1.05, repeat:-1, yoyo:true, duration:0.8});
      }
    });

    gsap.utils.toArray(".circle").forEach((circle, i) => {
      gsap.from(circle, {
        scrollTrigger: {
          trigger: circle,
          start:"top 90%",
        },
        opacity:0, scale:0.5, duration:1, delay:i*0.2
      });
    });
  </script>
